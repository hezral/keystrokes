            <description>Customize window transparency</description>
        </key>
        <key type="s" name="display-color">
            <default>"000000"</default>
            <summary>display window color</summary>
            <description>Customize display window color</description>
        </key>
        <key type="s" name="current-position">
            <default>"upper-left"</default>
            <summary>current position</summary>
            <description>current position of main window</description>
        </key>
        <key name="pos-x" type="i">
            <default>0</default>
            <summary>Horizontal position</summary>
            <description>Saved horizontal position of main window</description>
        </key>
        <key name="pos-y" type="i">
            <default>0</default>
            <summary>Vertical position</summary>
            <description>Saved vertical position of main window</description>
        </key>
