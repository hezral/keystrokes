            <description>Screen position based on Gdk.Gravity values</description>
        </key>
        <key type="b" name="auto-position">
            <default>true</default>
            <summary>Revert to initial position</summary>
            <description>Revert to initial position</description>
        </key>
        <key type="b" name="fixed-position">
            <default>true</default>
